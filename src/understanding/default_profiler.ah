#ifndef __ACP__DEFAULT_PROFILER_AH__
#define __ACP__DEFAULT_PROFILER_AH__

#include "profiler.ah"
#include "../util/default_profiler_msg_builder.hh"
#include "../util/cout_printer.hh"
#include "../util/std_thread_controller.hh"

/**
 * \aspect DefaultProfiler
 * \file src/understanding/default_profiler.ah
 * \brief DefaultProfiler is the default aspect for profiling in this ACP library.
 *
 * It uses the DefaultProfilerMsgBuilder and the CoutPrinter to create and print the messages.
 * If the developer wants to use a different ProfilerMsgBuilder or Printer, they can create their own aspect that
 * extends the original Profiler aspect.
 *
 */
aspect DefaultProfiler : public Profiler {

public:

	DefaultProfiler() : Profiler(new acp::DefaultProfilerMsgBuilder(), new acp::CoutPrinter(), new acp::StdThreadController()) {}

	virtual ~DefaultProfiler() {}

};

#endif // __ACP__DEFAULT_PROFILER_AH__
